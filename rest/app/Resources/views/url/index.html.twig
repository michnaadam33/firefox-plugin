{% extends 'base.html.twig' %}
{% block header %}Urls list{% endblock %}
{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Regex</th>
                <th>Selector</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for url in urls %}
            <tr>
                <td><a href="{{ path('url_show', { 'id': url.id }) }}">{{ url.id }}</a></td>
                <td>{{ url.regex }}</td>
                <td>{{ url.selector }}</td>
                <td>{{ url.startDate is empty ? "∞" : url.startDate | date("F jS \\a\\t g:ia") }}</td>
                <td>{{ url.endDate is empty ? "∞" :url.endDate | date("F jS \\a\\t g:ia") }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('url_show', { 'id': url.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('url_edit', { 'id': url.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a class="btn btn-default" href="{{ path('url_new') }}">Create a new url</a>
{% endblock %}
